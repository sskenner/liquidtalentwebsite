<div id="filter" class="functions" style="display: none; position: relative; left: 0;top: 0;z-index: 999;width: 100%;height: 100%;overflow: hidden;background: rgba(0, 0, 0, 0.15);">
  <div class="visibility-toggle t active" onclick="$('#filter').hide();" style="position: absolute; left: 188px; z-index: 99999999;"></div>
  <div style="position: absolute; width: 500px; right: 0; top: 0; background: #fff; padding: 10px;">
    <div id="sign-up-form" class="login-container" style="width: 100%; margin: 0;">
      <div style="width: 49%; float: left;">
        <div>
          <input type="text" placeholder="Category" class="text-field category" style="width: 100%; font-size: 16px; box-shadow: none; border: 1px solid #ccc; height: 35px; line-height: 38px;">
          <div id="categories"><div onclick="setCategory(null, 'All Categories');">All Categories</div></div>
        </div>

        <div>
          <input type="text" placeholder="Subcategory" class="text-field subcategory" style="width: 100%; font-size: 16px; box-shadow: none; border: 1px solid #ccc; height: 35px; line-height: 38px;">
          <div id="subcategories"></div>
        </div>

        <div>
          <input type="text" placeholder="City" class="text-field city" style="width: 100%; font-size: 16px; box-shadow: none; border: 1px solid #ccc; height: 35px; line-height: 38px;">
          <div id="cities"></div>
        </div>

        <div>
          <input type="text" placeholder="College" class="text-field school" onkeyup="searchSchool(this.value);" style="width: 100%; font-size: 16px; box-shadow: none; border: 1px solid #ccc; height: 35px; line-height: 38px; margin-bottom: 0;">
          <div id="schools"></div>
        </div>

        <input type="hidden" name="" id="category_id" />
        <input type="hidden" name="" id="subcategory_id" />
        <input type="hidden" name="" id="city_id" />
        <input type="hidden" name="" id="school_id" />
        <input type="hidden" name="" id="hourly_rate_from" value="0" />
        <input type="hidden" name="" id="hourly_rate_to" value="200" />
        <input type="hidden" name="" id="rate_from" value="0" />
        <input type="hidden" name="" id="rate_to" value="5" />
      </div>
      <div style="width: 48%; float: right;">
        <div style="font-size: 125%; margin: 5px 0 15px 0;">Hourly Rate $<span id="hourly_rate_from_label">0</span>-<span id="hourly_rate_to_label">200</span>+</div>
        <div id="hourly_rate" style="margin-left: 10px;"></div>

        <div style="font-size: 125%; margin: 16px 0 15px 0;">Rating <span id="rate_from_label">0</span>-<span id="rate_to_label">5</span></div>
        <div id="rate" style="margin-left: 10px;"></div>

        <a href="javascript: filterUsers(<%= listing %>);" class="green-button" style="margin-top: 20px;">Search</a>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
  </div>
</div>