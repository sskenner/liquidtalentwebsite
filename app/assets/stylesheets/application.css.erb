    /****** Sign Up Form ******/

#sign-up-form {
    margin: 0 auto 60px auto;
    width: 400px;
    position: static;
    display: block;
    vertical-align: top;
}
#sign-up-form .green-button {
    width: 100%;
    padding: 18px 0;
    font-size: 18px;
    text-align: center;
}

.image-upload {
    float: left;
    width: 120px;
    height: 120px;
    background: url(<%= asset_path "main/button-image-upload.png" %>);
}
.image-upload:hover {
    cursor: pointer;
}
.image-upload input {
    width: 100%;
    height: 100%;
    filter: alpha(opacity=0);
    opacity: 0;
}

#signup-provider input {
    margin-right: 15px;
}
#signup-provider {
    font-size: 1.5em;
    padding: 20px 0;
}

