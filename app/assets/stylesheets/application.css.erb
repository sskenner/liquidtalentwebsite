    width: 270px;
    float: right;
}
#sign-up-form .email { margin-bottom: 30px; }

    /****** Sign Up SP ******/

#sign-up-sp-form {
    margin: 0 auto 60px auto;
    width: 850px;
    position: static;
    display: block;
    vertical-align: top;
}

#signup-address {
    margin-top: 5px;
    margin-bottom: 30px;
}
