}
.cities:hover, .state:hover, .skills:hover {
    cursor: pointer;
}
#schools {
    width: 400px;
}

#cities div, #skills div, #schools div, #states div {
    background: #fff;
    padding: 15px;
    border-bottom: 1px solid #ccc;
    cursor: pointer;
}
#cities div:hover , #skills div:hover , #schools div:hover, #states div:hover {
    background: #f6f6f6;
}

/****** Search ******/

#search-tool-bar {
    box-shadow: 0px 0px 10px 0px #CCC;
    background: #FFF;
}
#search-tool-bar .title {
    font-size: 24px;
    font-weight: 600;
    text-align: center;
    line-height: 60px;
}
#search-tool-bar .functions {
    position: absolute;
    right: 10px;
    top: 10px;
}
.functions .geo-toggle {
    display: inline-block;
    height: 40px;
    line-height: 45px;
    padding: 0px 20px;
    font-size: 20px;
    vertical-align: top;
}
.functions .visibility-toggle {
    display: inline-block;
    vertical-align: top;
    width: 40px;
    height: 40px;
    background-color: #000;
    margin-left: 10px;
    background: url(<%= asset_path "search/visibility-toggle.png" %>);
    background-position: 0px 40px;
    cursor: pointer;
}
.functions .visibility-toggle:hover { background-position: 40px 40px; }
.functions .visibility-toggle.active { background-position: 0px 0px; }
.functions .visibility-toggle.active:hover { background-position: 40px 0px; }
#map {
    height: 100%;
    width:115%;
