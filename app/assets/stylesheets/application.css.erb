/* fonts */

@font-face {
    font-family: 'nexa';
    font-weight: 100;
    src: url('<%= asset_url "nexalight.ttf" %>');
}
@font-face {
    font-family: 'nexa';
    font-weight: 900;
    src: url('<%= asset_url "nexabold.ttf" %>');
}

/* reset */

* {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

*:before, *:after {
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section { display: block; }
ol, ul { list-style: none; }
blockquote, q { quotes: none; }
blockquote:before, blockquote:after, q:before, q:after { content: none; }

input, textarea, div[contentEditable="true"] { outline: none; }
div[contentEditable="true"], div[contentEditable="true"] div, div[contentEditable="true"] p {
    white-space: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
}
div[contentEditable="true"] br { display: none !important; }
div[contentEditable="true"] div, div[contentEditable="true"] p { display: inline; }

table {
    border-collapse: collapse;
    border-spacing: 0;
}

a { cursor: pointer; }

body {
    line-height: 1;
    background-color: white;
    color: #111111;
    font-family: 'nexa', Arial, Helvetica, sans-serif;
    font-weight: 100;
    font-size: 14px;
    min-width: 660px;
}

a {
    text-decoration: none;
    cursor: pointer;
    color: #2ABD43;
}
a:hover { color: #000; }

/* General */

.t {
    -webkit-transition: all 0.3;
    -moz-transition: all 0.3;
    -o-transition: all 0.3;
    -ms-transition: all 0.3;
    -webkit-transition: all 0.3;
}

.green-button {
    background: url(<%= asset_url "main/gradient-green.png" %>);
    background-size: 1px 100%;
    color: #FFF;
}
.green-button:hover, .green-button:focus { background: #2ABD43 !important; }

