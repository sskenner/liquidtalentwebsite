    width: 100%;
}

#signup-hourly-rate {
    width: 48%;
    float: right;
}

.signup-form-sp-button {
    width: 50%;
    margin: 25px auto;
    padding: 15px 0;
    font-size: 18px;
    text-align: center;
}

