#logo-login {
    display: block;
    width: 90%;
    max-width: 655px;
    margin: 80px auto;
}

.login-container {
    width: 400px;
    position: relative;
    display: inline-block;
    vertical-align: top;
}
#sign-in.login-container { margin-left: 65px; }
#sign-up.login-container { margin-left: 30px; }

.login-container .title {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 30px;
}
.login-container .text-field {
    width: 400px;
    height: 55px;
    line-height: 58px;
    font-size: 20px;
    margin-bottom: 10px;
}
.login-container .login-button {
    float: right;
    padding: 15px 40px;
    font-size: 18px;
}
.login-container .signup-button {
    display: block;
    width: 399px;
    height: 55px;
    background: url(<%= asset_path "sign-up/buttons-linkedin-signup.png" %>);
    margin-bottom: 10px;
}
.login-container .linkedin-sign-up { background-position: 0px 0px; }
.login-container .linkedin-sign-up:hover { background-position: 0px -55px; }
.login-container .sign-up { background-position: 399px 0px; }
.login-container .sign-up:hover { background-position: 399px -55px; }


#logo-header {
    position: relative;
    background: rgba(255, 255, 255, 0.6);
    box-shadow: 0px 5px 10px 0px #CCC;
}
#logo-header #logo-login {
    margin: 0 auto 40px auto;
    padding: 18px 0;
    width: 493px;
}
#logo-header .black-button {
    padding: 12px 30px;
    position: absolute;
    right: 0;
    top: 20px;
    font-size: 18px;
}

/***********************************************************************************************************************
/   Sign up form
/**********************************************************************************************************************/

#sign-up-form {
    margin: 0 auto 60px auto;
    width: 400px;
    position: static;
    display: block;
    vertical-align: top;
}
#sign-up-form .green-button {
    width: 100%;
    padding: 18px 0;
    font-size: 18px;
    text-align: center;
}

.image-upload {
    float: left;
    width: 120px;
    height: 120px;
    background: url(<%= asset_path "main/button-image-upload.png" %>);
}
.image-upload:hover {
    cursor: pointer;
}
.image-upload input {
    width: 100%;
    height: 100%;
    filter: alpha(opacity=0);
    opacity: 0;
}

#signup-provider input {
    margin-right: 15px;
}
#signup-provider {
    font-size: 1.5em;
    padding: 20px 0;
}

#sign-up-form .name, #sign-up-form .email {
    width: 270px;
    float: right;
}
#sign-up-form .email { margin-bottom: 30px; }

/***********************************************************************************************************************
/   Sign up SP
/**********************************************************************************************************************/

#sign-up-sp-form {
    margin: 0 auto 60px auto;
    width: 850px;
    position: static;
    display: block;
    vertical-align: top;
}

#signup-address {
    margin-top: 5px;
    margin-bottom: 30px;
}
#signup-address > div {
    width: 200px;
    float: left;
    margin-right: 10px;
}
#signup-address > div > div {
    width: 200px;
}

#sign-up-sp-form p {
    font-size: 1.4em;
    padding-bottom: 10px;
}

#signup-left {
    width: 400px;
    float: left;
}
#signup-left div {
    height: 88px;
}

#signup-right {
    width: 400px;
    float: right;
}

#signup-skills {
    width: 48%;
    float: left;
}
#signup-skills .text-field {
    width: 100%;
}

#signup-hourly-rate {
    width: 48%;
    float: right;
}

.signup-form-sp-button {
    width: 50%;
    margin: 25px auto;
    padding: 15px 0;
    font-size: 18px;
    text-align: center;
}

#cities, #skills, #schools {
    width: 100%;
    position: absolute;
}
#cities, #skills {
    width: 210px;
    display: none;
}
.cities:hover {
    cursor: pointer;
}
#schools {
    width: 400px;
}
.skills:hover {
    cursor: pointer;
}
#cities div, #skills div, #schools div {
    background: #fff;
    padding: 15px;
    border-bottom: 1px solid #ccc;
    cursor: pointer;
}
#cities div:hover , #skills div:hover , #schools div:hover {
    background: #f6f6f6;
}

/***********************************************************************************************************************
/   Search
/**********************************************************************************************************************/

#search-tool-bar {
    box-shadow: 0px 0px 10px 0px #CCC;
    background: #FFF;
}
#search-tool-bar .title {
    font-size: 24px;
    font-weight: 600;
    text-align: center;
    line-height: 60px;
}
#search-tool-bar .functions {
    position: absolute;
    right: 10px;
    top: 10px;
}
.functions .geo-toggle {
    display: inline-block;
    height: 40px;
    line-height: 45px;
    padding: 0px 20px;
    font-size: 20px;
    vertical-align: top;
}
.functions .visibility-toggle {
    display: inline-block;
    vertical-align: top;
    width: 40px;
    height: 40px;
    background-color: #000;
    margin-left: 10px;
    background: url(<%= asset_path "search/visibility-toggle.png" %>);
    background-position: 0px 40px;
    cursor: pointer;
}
.functions .visibility-toggle:hover { background-position: 40px 40px; }
.functions .visibility-toggle.active { background-position: 0px 0px; }
.functions .visibility-toggle.active:hover { background-position: 40px 0px; }