#logo-login {
    display: block;
    width: 90%;
    max-width: 655px;
    margin: 80px auto;
}

.login-container {
    width: 400px;
    position: relative;
    display: inline-block;
    vertical-align: top;
}
#sign-in.login-container { margin-left: 65px; }
#sign-up.login-container { margin-left: 30px; }

.login-container .title {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 30px;
}
.login-container .text-field {
    width: 400px;
    height: 55px;
    line-height: 58px;
    font-size: 20px;
    margin-bottom: 10px;
}
.login-container .login-button {
    float: right;
    padding: 15px 40px;
    font-size: 18px;
}
.login-container .signup-button {
    display: block;
    width: 399px;
    height: 55px;
    background: url(<%= asset_path "sign-up/buttons-linkedin-signup.png" %>);
    margin-bottom: 10px;
}
.login-container .linkedin-sign-up { background-position: 0px 0px; }
.login-container .linkedin-sign-up:hover { background-position: 0px -55px; }
.login-container .sign-up { background-position: 399px 0px; }
.login-container .sign-up:hover { background-position: 399px -55px; }